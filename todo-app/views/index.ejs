<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="./css/styles.css">
  <script>
    function updateTodo(id) {
      fetch(`/todos/${id}/markAsCompleted`, {
        method: 'put',
        headers: {'Content-Type': 'application/json'}
      })
      .then((res) => {
        if (res.ok){
          window.location.reload();
        }
      })
      .catch((err) => console.error(err))
    }
  </script>
  <script src="https://cdn.tailwindcss.com"></script>
  <title>To-Do Manager</title>
</head>
<body>
  <div class="grid grid-cols-6">
    <div class="col-start-3 col-span-2">

<!-- Header section -->

      <%- include('header.ejs') %>

<!-- Add Todo -->

      <%- include('addTodo.ejs') %>

<!-- List Todos  and delete-->

      <%- include('todos.ejs', {content: 'Overdue', data: overdue, id:'overdue'}) %>
      <%- include('todos.ejs', {content: 'Due Today', data: dueToday, id:'due-today'}) %>
      <%- include('todos.ejs', {content: 'Due Later', data: dueLater, id:'due-later'}) %>

    </div>
  </div>
<!-- Footer section -->

  <%- include('footer.ejs') %>

</body>
</html>